const arry = [1,3,5,6,7,8,9,11,22,33,44,44]

const bSearch = (arr, tgt) =>{
  //set pointers
  let left = 0
  let right = arr.length - 1
  let middle = Math.floor( (left + right) / 2 )

  // while(arr[middle] !== tgt){
  if(arr[middle] === tgt) return middle;
  
  if(tgt < arr[middle]){
    right = middle -1
  }else{
    left = middle + 1
  }
  Math.floor((left + right) / 2 )
  }
}

    
  
  bSearch(arry,3)